/*
  Possible Animations:
  enter
  leave
  appear Must set transitionAppear={true} on animation component
*/

// анимация заказа
// начальное состояние
.order-enter
  transition all .5s
  transform translateX(-120%)
  max-height 0
  padding 0 !important
  // конечное состояние
  &.order-enter-active
    max-height 60px
    padding 2rem 0 !important
    transform translateX(0)

.order-leave
  transition all .5s
  transform translateX(0)
  // конечное состояние
  &.order-leave-active
    max-height 0
    padding 0 !important
    transform translateX(120%)

// анимация цифры
.count-enter
  transition all .25s
  transform translateY(100%)
  &.count-enter-active
    transform translateY(0)

.count-leave
  transition all .25s
  transform translateY(0)
  position absolute
  left 0
  bottom 0
  &.count-leave-active
    transform translateY(-100%)